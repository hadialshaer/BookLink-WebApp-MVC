<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BookLink</title>

	<!-- Include Bootstrap CSS -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

	<!-- Include application-specific styles -->
	<link rel="stylesheet" href="~/BookLink.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<!-- Include Bootstrap Icons CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	<!-- Include Toastr CSS (for notifications) -->
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

	<!-- Include DataTables CSS (for tables) -->
	<link rel="stylesheet" href="//cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" />

	<!-- Allow additional styles to be included in specific views -->
	@RenderSection("Styles", required: false)
</head>
<body>
	<header>
		<!-- Navigation bar -->
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<!-- Brand/logo -->
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookLink</a>

				<!-- Mobile menu button -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Navbar links -->
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav me-auto">
						<!-- Home link -->
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Member" asp-controller="Home" asp-action="Index">
								<i class="bi bi-house-door"></i> Home
							</a>
						</li>

						<!-- Lend a book link -->
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Member" asp-controller="Book" asp-action="Lend">
								<i class="bi bi-box-arrow-up"></i> Lend a Book
							</a>
						</li>

						<!-- Sell a book link -->
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Member" asp-controller="Book" asp-action="Sell">
								<i class="bi bi-cart"></i> Sell a Book
							</a>
						</li>

						@if (User.IsInRole(SD.Role_Admin))
						{
							<!-- Dropdown for content management (Admin access) -->
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Content Management
								</a>
								<ul class="dropdown-menu">
									<!-- Manage Categories -->
									<li class="nav-item">
										<a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">
											<i class="bi bi-book"></i> Categories
										</a>
									</li>
									<!-- Manage Books -->
									<li class="nav-item">
										<a class="dropdown-item" asp-area="Admin" asp-controller="Book" asp-action="Index">
											<i class="bi bi-book"></i> Book
										</a>
									</li>
									<li><hr class="dropdown-divider"></li>
								</ul>
							</li>
						}
					</ul>

					<!-- Login/logout partial view -->
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>

	<!-- Main content -->
	<div class="container">
		<main role="main" class="pb-3">
			<!-- Notification partial -->
			<partial name="_Notification" />

			<!-- Render the page content -->
			@RenderBody()
		</main>
	</div>

	<!-- Footer -->
	<footer class="border-top footer text-muted">
		<div class="container text-center">
			Made with <i class="bi bi-heart-fill text-danger"></i> by Hadi Alshaer
		</div>
	</footer>

	<!-- Include jQuery -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<!-- Include Bootstrap JS -->
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Site-specific JavaScript -->
	<script src="~/js/site.js" asp-append-version="true"></script>

	<!-- Include TinyMCE (rich text editor) -->
	<script src="https://cdn.tiny.cloud/1/eg58go00jp9emuvyhba36urdyyxtt9ouuhohozhkvh7my4iz/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

	<!-- Include DataTables JS -->
	<script src="//cdn.datatables.net/2.2.1/js/dataTables.min.js" asp-append-version="true"></script>

	<!-- Include SweetAlert2 (for alerts) -->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<!-- Allow additional scripts to be included in specific views -->
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
