@model BookLink.Models.Category

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="editCategoryForm">
                    <!-- Hidden Field for Category ID -->
                    <input type="hidden" asp-for="CategoryId" id="editCategoryId" />

                    <!-- Category Name Input -->
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label"></label>
                        <input asp-for="CategoryName" class="form-control border border-primary" id="editCategoryName" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Update Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
