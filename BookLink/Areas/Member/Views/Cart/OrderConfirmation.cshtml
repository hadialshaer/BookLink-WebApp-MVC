@model int

@{
    ViewData["Title"] = "Order Confirmation";
}

@section Styles {
    <link rel="stylesheet" href="~/css/orderConfirmation.css" asp-append-version="true" />
}


@{
    var random = new Random();
}

@for (int i = 0; i < 50; i++)
{
    <div class="confetti" style="left: @(random.Next(0, 100))vw; animation-delay: @(i * 0.1)s;"></div>
}

<div class="confirmation-container">
    <div class="checkmark-circle">
        <i class="fas fa-check checkmark"></i>
    </div>

    <h1 class="text-center mb-4" style="color: #2d3436; font-weight: 600;">Order Confirmed! 🎉</h1>

    <div class="thank-you-section">
        <h3 class="mb-3" style="color: #4CAF50;">Thank You for Your Purchase!</h3>
        <p class="lead">Your order has been successfully processed and is now being prepared for shipment.</p>
    </div>

    <div class="text-center">
        <div class="order-id-box">
            <span style="color: #6c5ce7;">Order ID:</span>
            <span style="color: #2d3436; font-weight: 500;">#@Model</span>
        </div>

        <p class="text-muted mt-4">You'll receive a confirmation email shortly with your order details.</p>

        <div class="mt-5">
            <a href="/" class="btn btn-continue text-white">
                <i class="fas fa-shopping-bag mr-2"></i>Continue Shopping
            </a>
        </div>
    </div>

    <div class="order-timeline mt-5">
        <div class="d-flex justify-content-around">
            <div class="timeline-step active">
                <div class="timeline-icon"><i class="fas fa-cart-plus"></i></div>
                <div class="timeline-label">Order Placed</div>
            </div>
            <div class="timeline-step">
                <div class="timeline-icon"><i class="fas fa-box-open"></i></div>
                <div class="timeline-label">Processing</div>
            </div>
            <div class="timeline-step">
                <div class="timeline-icon"><i class="fas fa-shipping-fast"></i></div>
                <div class="timeline-label">Shipped</div>
            </div>
        </div>
    </div>
</div>
