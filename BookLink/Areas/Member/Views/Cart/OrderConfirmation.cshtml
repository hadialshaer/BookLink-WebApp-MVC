@model ShoppingCartVM
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <!-- Main Card Container -->
    <div class="card border-0 shadow-lg overflow-hidden">
        <!-- Card Header with Gradient Background -->
        <div class="card-header" style="background: linear-gradient(45deg, #613659, #3CB371); color: white; padding: 2rem;">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-check-circle me-2"></i>Order Confirmed!
                </h2>
                <div class="text-end">
                    <p class="mb-0">Order ID: #@Model.OrderHeader.Id</p>
                    <small>Date: @Model.OrderHeader.OrderDate.ToShortDateString()</small>
                </div>
            </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-4 p-md-5">
            <div class="row g-5">
                <!-- Order Details Section -->
                <div class="col-lg-7">
                    <div class="pe-lg-4">
                        <h3 class="mb-4" style="color: #613659;">
                            <i class="fas fa-info-circle me-2"></i>Order Details
                        </h3>

                        <!-- Shipping Information Card -->
                        <div class="card border-primary mb-4">
                            <div class="card-header" style="background-color: #f8f9fa;">
                                <h5 class="mb-0" style="color: #613659;">
                                    <i class="fas fa-truck me-2"></i>Shipping To
                                </h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    <li><strong>@Model.OrderHeader.Name</strong></li>
                                    <li>@Model.OrderHeader.Address</li>
                                    <li>@Model.OrderHeader.City, @Model.OrderHeader.State @Model.OrderHeader.PostalCode</li>
                                    <li>Phone: @Model.OrderHeader.PhoneNumber</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Order Status Timeline -->
                        <div class="card border-primary mb-4">
                            <div class="card-header" style="background-color: #f8f9fa;">
                                <h5 class="mb-0" style="color: #613659;">
                                    <i class="fas fa-history me-2"></i>Order Status
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="timeline">
                                    <div class="timeline-item active">
                                        <div class="timeline-icon" style="background-color: #3CB371;">
                                            <i class="fas fa-check"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6>Order Confirmed</h6>
                                            <small>@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</small>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-icon" style="background-color: #613659;">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6>Estimated Delivery</h6>
                                            <small>@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary Section -->
                <div class="col-lg-5">
                    <div class="ps-lg-4">
                        <h3 class="mb-4" style="color: #613659;">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h3>

                        <div class="list-group mb-4">
                            @foreach (var cart in Model.ListCart)
                            {
                                <div class="list-group-item py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="my-0" style="color: #613659;">@cart.Book.Title</h6>
                                            <small class="text-muted">Quantity: @cart.Count</small>
                                        </div>
                                        <span class="text-primary">@cart.Price.ToString("C")</span>
                                    </div>
                                </div>
                            }

                            <!-- Total Price Section -->
                            <div class="card border-primary mb-4">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0" style="color: #613659;">Total Paid:</h5>
                                        <h4 class="mb-0" style="color: #613659;">@Model.OrderHeader.OrderTotal.ToString("C")</h4>
                                    </div>
                                </div>
                            </div>

                            <!-- Support Information -->
                            <div class="alert alert-info mb-4">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-headset fa-lg me-3" style="color: #613659;"></i>
                                    <div>
                                        <p class="mb-0" style="color: #613659;">
                                            Need Help?<br>
                                            <strong>Contact our support team: (555) 123-4567</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Continue Shopping Button -->
                            <a asp-action="Index" asp-controller="Home" 
                               class="btn btn-lg w-100 py-3" 
                               style="background: linear-gradient(45deg, #613659, #3CB371); color: white;">
                                <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Timeline Styling */
    .timeline {
        position: relative;
        padding-left: 40px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }

    .timeline-icon {
        position: absolute;
        left: -40px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline-content {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 6px;
        position: relative;
    }

    .timeline-item:not(:last-child) .timeline-content:after {
        content: '';
        position: absolute;
        left: -25px;
        top: 24px;
        width: 2px;
        height: calc(100% + 20px);
        background: #dee2e6;
    }

    /* Hover Effects */
    .list-group-item:hover {
        transform: translateX(5px);
        transition: transform 0.3s ease;
    }

    /* Consistent Card Styling */
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }
</style>