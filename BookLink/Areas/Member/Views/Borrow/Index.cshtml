@model IEnumerable<BorrowRequest>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient text-light py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Borrowing Requests</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Borrower</th>
                    <th>Contact</th>
                    <th>Request Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Book.Title</td>
                        <td>@($"{request.Borrower.FirstName} {request.Borrower.LastName}")</td>
                        <td>@request.Borrower.PhoneNumber</td>
                        <td>@request.RequestDate.ToString("d")</td>
                        <td>@request.Status</td>
                        <td>
                            @if (User.IsInRole(SD.Role_Admin) || User.Identity.Name == request.Lender.UserName)
                            {
                                @if (request.Status == BorrowRequestStatus.Pending)
                                {
                                    <form method="post" asp-action="ApproveRequest" class="d-inline">
                                        <input type="hidden" name="requestId" value="@request.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>
                                    <form method="post" asp-action="RejectRequest" class="d-inline">
                                        <input type="hidden" name="requestId" value="@request.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                    </form>
                                }
                                else if (request.Status == BorrowRequestStatus.Approved)
                                {
                                    <span class="text-muted">Due @request.DueDate?.ToString("d")</span>
                                }
                            }

                            @if (request.Status == BorrowRequestStatus.Approved && User.Identity.Name == request.Borrower.UserName)
                            {
                                <form method="post" asp-action="ReturnBook">
                                    <input type="hidden" name="requestId" value="@request.Id" />
                                    <button type="submit" class="btn btn-info btn-sm">Mark Returned</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>