@model IEnumerable<BorrowRequest>
<table class="table">
    <thead>
        <tr>
            <th>Book</th>
            <th>Borrower</th>
            <th>Status</th>
            <th>Request Date</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Book.Title</td>
                <td>@request.Borrower.UserName</td>
                <td>@request.Status</td>
                <td>@request.RequestDate.ToString("d")</td>
                <td>@(request.DueDate?.ToString("d") ?? "-")</td>
                <td>
                    @if (User.IsInRole(SD.Role_Admin) || User.Identity.Name == request.Lender.UserName)
                    {
                        <form asp-action="Approve" asp-route-id="@request.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>