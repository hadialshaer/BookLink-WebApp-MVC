@model IEnumerable<BorrowRequest>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient text-light py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Borrowing Requests</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div id="loadingSpinner" class="text-center" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        <div id="noDataMessage" class="alert alert-info mt-4" style="display: none;">
            <h5 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>
                No borrowing requests found
            </h5>
        </div>
        <div class="table-responsive-sm">
            <table id="borrowTable" class="table table-bordered table-striped table-hover align-middle text-center" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center align-middle">Book</th>
                            <th class="text-center align-middle">Borrower</th>
                            <th class="text-center align-middle">Contact</th>
                            <th class="text-center align-middle">Location</th>
                            <th class="text-center align-middle">Request Date</th>
                            <th class="text-center align-middle">Status</th>
                            <th class="text-center align-middle">Due Date</th>
                            <th class="text-center align-middle">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/borrow_member.js"></script>
}