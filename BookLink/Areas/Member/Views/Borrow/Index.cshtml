@model IEnumerable<BorrowRequest>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-white py-3">
        <h4 class="mb-0">Borrowing Requests</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Requester</th>
                    <th>Status</th>
                    <th>Request Date</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Book.Title</td>
                        <td>@request.Borrower.UserName</td>
                        <td>@request.Status</td>
                        <td>@request.RequestDate.ToString("d")</td>
                        <td>@(request.DueDate?.ToString("d") ?? "-")</td>
                        <td>
                            @if (User.Identity.Name == request.Lender.UserName && request.Status == BorrowRequestStatus.Pending)
                            {
                                <form asp-action="ApproveRequest" method="post">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                            }
                            @if (request.Status == BorrowRequestStatus.Approved && User.Identity.Name == request.Borrower.UserName)
                            {
                                <form asp-action="ReturnBook" method="post">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-info btn-sm">Mark Returned</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>