@model List<Book>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient text-white py-4">
        <h2 class="text-white text-center mb-0">My Listed Books</h2>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-md-6"></div>
            <div class="col-md-6 text-md-end">
                @* <a asp-controller="Book" asp-action="Upsert" *@
                @*    asp-route-transactionType="Sell" class="btn btn-secondary me-2"> *@
                @*     <i class="bi bi-plus-circle"></i> Sell New Book *@
                @* </a> *@
                <a asp-controller="Book" asp-action="Upsert"
                   asp-route-transactionType="Lend" class="btn btn-info">
                    <i class="bi bi-arrow-repeat"></i> Lend New Book
                </a>
            </div>
        </div>
        <!-- Table Section -->
        <div class="table-responsive-sm">
            <!-- Ensures table responsiveness on small screens -->
            <table id="tableData" class="table table-bordered table-striped table-hover align-middle text-center" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center align-middle">Title</th>
                        <th class="text-center align-middle">Author</th>
                        <th class="text-center align-middle">Category</th>
                        <th class="text-center align-middle">Transaction Type</th>
                        <th class="text-center align-middle">Price</th>
                        <th class="text-center align-middle">Max Lend Duration (Days)</th>
                        <th class="text-center align-middle">Due Date</th>
                        <th class="text-center align-middle">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/book _member.js"></script>
}