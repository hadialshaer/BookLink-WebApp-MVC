@model Book

<div class="card shadow border-0 my-4">
	<!-- Card Header -->
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Book</h2>
			</div>
		</div>
	</div>

	<!-- Card Body -->
	<div class="card-body p-4">
		<form method="post" class="row">
			@Html.AntiForgeryToken() <!-- Add CSRF Protection -->

			<div class="border p-3">
				<!-- Title -->
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" />
					<label asp-for="Title"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>

				<!-- Description -->
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" class="form-control border-0 shadow" style="height: 100px;"></textarea>
					<label asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<!-- Author -->
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" />
					<label asp-for="Author"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>

				<!-- Prices -->
				<div class="row">
					<div class="form-floating py-2 col-md-6">
						<input asp-for="ListPrice" class="form-control border-0 shadow" />
						<label asp-for="ListPrice"></label>
						<span asp-validation-for="ListPrice" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-md-6">
						<input asp-for="Price" class="form-control border-0 shadow" />
						<label asp-for="Price"></label>
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-md-6">
						<input asp-for="Price3" class="form-control border-0 shadow" />
						<label asp-for="Price3"></label>
						<span asp-validation-for="Price3" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-md-6">
						<input asp-for="Price5" class="form-control border-0 shadow" />
						<label asp-for="Price5"></label>
						<span asp-validation-for="Price5" class="text-danger"></span>
					</div>
				</div>

				<!-- Category -->
				<div class="form-floating py-2 col-md-6">
					<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select>
					<label asp-for="CategoryId">Book Category</label>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>


				<!-- Buttons -->
				<div class="row pt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary border form-control">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {

	<partial name="_ValidationScriptsPartial" />
}
