@page
@model LoginModel

@{
    ViewData["HideNavbar"] = true;
}

@section Styles {
    <link href="~/css/login_signup.css" rel="stylesheet" />
}

<div class="d-flex justify-content-center align-items-center min-vh-100 p-3">
    <div class="card bg-white shadow-lg rounded-4 w-100" style="max-width: 500px;">
        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h2 class="mb-0">Welcome Back</h2>
        </div>
        <div class="card-body p-3 p-md-4">
            <form id="loginForm" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <!-- Email Input -->
                <div class="mb-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-2">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>
                    <a class="text-decoration-none small text-primary" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Sign In</button>
            </form>

            <!-- Horizontal Separator -->
            <div class="d-flex align-items-center justify-content-center my-3">
                <hr class="flex-grow-1 text-muted">
                <span class="px-3 small text-muted bg-white">or continue with</span>
                <hr class="flex-grow-1 text-muted">
            </div>

            <!-- External Login Section -->
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="row g-1">
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <div class="col-12 mb-1">
                                <button type="submit"
                                        class="btn btn-@provider.Name.ToLower() btn-social d-flex justify-content-center align-items-center gap-2 w-100"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Connect @provider.DisplayName">
                                    <i class="bi bi-@provider.Name.ToLower() fs-5"></i>
                                    Connect @provider.DisplayName
                                </button>
                            </div>
                        }
                    }
                </div>
            </form>

            <!-- Register Link -->
            <p class="text-center mt-3 mb-0">
                New to BookLink?
                <a asp-page="./Register" class="text-decoration-none fw-bold text-primary">Create account</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
