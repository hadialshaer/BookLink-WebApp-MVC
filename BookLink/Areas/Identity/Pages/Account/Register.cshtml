@page
@model RegisterModel

@{
    ViewData["HideNavbar"] = true;
}

@section Styles {
    <link href="~/css/login_signup.css" rel="stylesheet" />
}

<div class="d-flex justify-content-center align-items-center min-vh-100 p-3">
    <div class="card bg-white shadow-lg rounded-4 w-100" style="max-width: 850px;">
        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h2 class="mb-0">@(User.IsInRole(SD.Role_Admin) ? "ADMIN REGISTRATION" : "Join BookLink")</h2>
        </div>

        <div class="card-body p-4 p-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="g-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="row g-2">
                    <!-- Email -->
                    <div class="col-12">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Name Row -->
                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Gender & Birth Date -->
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
                            <select asp-for="Input.gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                            </select>
                        </div>
                        <span asp-validation-for="Input.gender" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                            <input asp-for="Input.BirthDate" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.BirthDate" class="text-danger small mt-1 d-block"></span>
                    </div>

                    
                    <!-- City -->
                    <div class="col-12">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                            <select asp-for="Input.City" asp-items="Model.Input.CityList" class="form-select">
                                <option value="">City</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.City" class="text-danger small mt-1 d-block"></span>
                    </div>


                    <!-- Passwords -->
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <!-- Admin Role Section -->
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <div class="col-12">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                                <select asp-for="Input.Role" class="form-select">
                                    <option value="">Select Role</option>
                                    @foreach (var role in Model.Input.RoleList)
                                    {
                                        <option value="@role.Text">@role.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                    }

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </div>
                </div>
            </form>

            @if (!User.IsInRole(SD.Role_Admin))
            {
                <div class="position-relative my-4">
                    <hr class="text-muted" />
                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 small text-muted">
                        or continue with
                    </span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        class="btn btn-@provider.Name.ToLower() btn-social w-100 w-sm-auto"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Connect @provider.DisplayName"
                                        style="max-width: 250px;">
                                    <i class="bi bi-@provider.Name.ToLower() fs-5"></i>
                                    Connect @provider.DisplayName
                                </button>
                            }
                        }
                    </div>
                </form>
            }


            <p class="text-center mt-4 mb-0">
                Already registered?
                <a asp-page="./Login" class="text-decoration-none fw-bold text-primary">Sign in here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
