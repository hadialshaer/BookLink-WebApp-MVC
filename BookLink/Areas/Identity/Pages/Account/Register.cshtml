@page
@model RegisterModel

@{
    ViewData["HideNavbar"] = true;
}

@section Styles {
    <link href="~/css/login_signUp.css" rel="stylesheet" />
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary bg-gradient text-white py-4">
            <h2 class="text-white py-2 m-0 text-center">Create New Account</h2>
        </div>
        <div class="card-body">
            <p class="text-center text-muted">Join BookLink and start exploring books!</p>
            <hr />

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Email -->
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope" aria-label="Email"></i></span>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone" aria-label="Phone"></i></span>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        </div>
                    </div>
                </div>

                <!-- Personal Information (First Name & Last Name) -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person" aria-label="First Name"></i></span>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person" aria-label="Last Name"></i></span>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Gender & Birth Date -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-gender-ambiguous" aria-label="Gender"></i></span>
                            <select asp-for="Input.gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="">--Select Gender--</option>
                            </select>
                        </div>
                        <span asp-validation-for="Input.gender" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar" aria-label="Birth Date"></i></span>
                            <input asp-for="Input.BirthDate" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Password & Confirm Password -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock" aria-label="Password"></i></span>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill" aria-label="Confirm Password"></i></span>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- Role Selection -->
                <div class="mb-3">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>--Select Role--</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-center">
                    <button id="registerSubmit" type="submit" class="btn btn-primary py-2 w-50">
                        <i class="bi bi-person-plus"></i> Register
                    </button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p class="mb-0">Already have an account? <a asp-page="./Login" class="text-decoration-none">Login here</a></p>
            </div>

            <hr />

            <!-- External Login Section -->
            <div>
                <h5 class="text-center">Or Register with</h5>
                <div class="text-center">
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        class="btn btn-external @(provider.Name.ToLower())-btn w-100 my-2"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Register using your @provider.DisplayName account">
                                    <i class="bi bi-@(provider.Name.ToLower())"></i> Continue with @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <p class="mb-0">
                                No external authentication services configured.
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Learn More</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}