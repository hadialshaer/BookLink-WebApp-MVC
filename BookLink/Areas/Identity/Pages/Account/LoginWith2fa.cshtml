@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="container py-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <hr class="mb-4" />
    <p class="mb-4">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" placeholder="Two-Factor Code" />
                    <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>
                <div class="mb-4">
                    <button type="submit" class="w-100 btn btn-primary">Log in</button>
                </div>
            </form>
        </div>
    </div>
    <p class="text-center">
        Don't have access to your authenticator device? You can
        <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}